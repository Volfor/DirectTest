<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="156dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rect"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/answerTypeSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <RadioButton
            android:id="@+id/singleType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/selected_item"
            android:button="@null"
            android:checked="true"
            android:drawableStart="@drawable/format_list_bulleted"
            android:drawableTint="@color/colorAccent"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="-16dp"
            android:paddingTop="8dp" />

        <RadioButton
            android:id="@+id/multipleType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selected_item"
            android:button="@null"
            android:drawableStart="@drawable/format_list_checks"
            android:drawableTint="@color/colorAccent"
            android:paddingLeft="16dp"
            android:paddingRight="-16dp" />

        <RadioButton
            android:id="@+id/inputType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/selected_item"
            android:button="@null"
            android:drawableStart="@drawable/pencil"
            android:drawableTint="@color/colorAccent"
            android:paddingLeft="16dp"
            android:paddingRight="-16dp" />
    </RadioGroup>
</LinearLayout>