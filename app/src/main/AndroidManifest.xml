<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.fairytail.directtest">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="Testie">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".screens.teacher.testlist.TestListActivity" />
        <activity android:name=".screens.student.test.StudentTestActivity" />
        <activity android:name=".screens.teacher.test.TeacherTestActivity" />
        <activity android:name=".screens.teacher.test.TestResultsListActivity" />
        <activity android:name=".screens.student.test.TestResultActivity" />

    </application>

</manifest>
